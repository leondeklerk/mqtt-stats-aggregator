{
	"name": "mqtt-stats-aggregator",
	"version": "1.0.0",
	"description": "MQTT stats aggregator",
	"main": "index.ts",
	"scripts": {
		"lint": "eslint --ext .ts,.js,.json --ignore-path .gitignore .",
		"dev": "tsc-watch -p . --onSuccess \"node ./dist/index.js\"",
		"build": "npm run type-check && npm run build-only",
		"type-check": "tsc --noEmit",
		"start": "node dist/index.js",
		"prepare": "node ./scripts/prepare.js",
		"build-only": "tsc"
	},
	"keywords": [],
	"author": "Leon de Klerk",
	"license": "MIT",
	"lint-staged": {
		"*.{js,ts}": "eslint --ext .ts,.js --max-warnings 0"
	},
	"dependencies": {
		"cron": "2.4.1",
		"dotenv": "16.3.1",
		"mqtt": "5.0.3"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/leondeklerk/mqtt-stats-aggregator"
	},
	"devDependencies": {
		"@types/cron": "2.0.1",
		"@types/node": "18.17.11",
		"@types/ws": "8.5.5",
		"@typescript-eslint/eslint-plugin": "6.4.1",
		"eslint": "8.48.0",
		"eslint-config-prettier": "9.0.0",
		"husky": "8.0.3",
		"lint-staged": "14.0.1",
		"prettier": "3.0.2",
		"tsc-watch": "6.0.4",
		"typescript": "5.2.2"
	}
}

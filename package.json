{
	"name": "mqtt-stats-aggregator",
	"version": "1.0.0",
	"description": "MQTT stats aggregator",
	"main": "index.ts",
	"scripts": {
		"lint": "eslint --ext .ts,.js,.json --ignore-path .gitignore .",
		"dev": "tsc-watch --noClear -p tsconfig.json --onSuccess \"node ./dist/index.js\"",
		"build": "run-p type-check build-only",
		"type-check": "tsc --noEmit",
		"start": "node dist/index.js",
		"prepare": "husky install",
		"build-only": "tsc"
	},
	"keywords": [],
	"author": "Leon de Klerk",
	"license": "MIT",
	"lint-staged": {
		"*.{js,ts,vue}": "eslint --ext .ts,.js --max-warnings 0"
	},
	"dependencies": {
		"cron": "^2.1.0",
		"dotenv": "^16.0.3",
		"mqtt": "^4.3.7"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/leondeklerk/mqtt-stats-aggregator"
	},
	"devDependencies": {
		"@types/cron": "^2.0.0",
		"@types/node": "^18.11.18",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "5.47.1",
		"eslint": "8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"husky": "^8.0.2",
		"lint-staged": "^13.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "2.8.1",
		"tsc-watch": "^6.0.0",
		"typescript": "4.9.4"
	}
}

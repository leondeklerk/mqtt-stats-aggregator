{
	"name": "mqtt-stats-aggregator",
	"version": "1.0.0",
	"description": "MQTT stats aggregator",
	"main": "index.ts",
	"scripts": {
		"check": "bunx @biomejs/biome check .",
		"check:fix": "bunx @biomejs/biome check --apply .",
		"dev": "bun --watch run index.ts",
		"build": "bun run type-check && bun run build-only",
		"type-check": "tsc --noEmit -p tsconfig.json",
		"start": "bun run dist/index.js",
		"prepare": "bun run scripts/install.mjs",
		"build-only": "bun build index.ts --outdir dist --target bun"
	},
	"keywords": [],
	"author": "Leon de Klerk",
	"license": "MIT",
	"lint-staged": {
		"*": "biome check --no-errors-on-unmatched"
	},
	"dependencies": {
		"@biomejs/biome": "1.5.3",
		"cron": "3.1.6",
		"dotenv": "16.4.5",
		"mqtt": "5.3.5"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/leondeklerk/mqtt-stats-aggregator"
	},
	"devDependencies": {
		"@types/bun": "1.0.12",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"typescript": "5.3.3"
	}
}
